<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<ul>
   <strong>phone numbers</strong>
  	<% @person.phone_numbers.each do |phone| %>
	    <li>
	    	<%= phone.number %>
	    	<%= link_to 'edit', edit_phone_number_path(phone)%>
	    	<%= link_to 'remove', phone, method: :delete, data: { confirm: 'Are you sure?' } %>
	    </li>
  	<% end %>
</ul>

<ul>
   <strong>email addresses</strong>
   <% @person.email_addresses.each do |email| %>
      <li><%= email.address %></li>
   <% end %>
</ul>

<%= link_to 'Add phone number', new_phone_number_path(contact_id: @person.id, contact_type: 'Person') %> |
<%= link_to 'Add email address', new_email_address_path(contact_id: @person.id, contact_type: 'Person') %> |
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
